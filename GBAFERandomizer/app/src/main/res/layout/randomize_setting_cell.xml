<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:padding="@dimen/default_margin" android:descendantFocusability="blocksDescendants">

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/enabled_checkbox"
        android:clickable="false"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/title_label"
        android:text="@string/setting_cell_title_default"
        android:layout_alignTop="@id/enabled_checkbox"
        android:layout_toRightOf="@id/enabled_checkbox"
        android:textSize="24sp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/description_label"
        android:layout_below="@id/title_label"
        android:text="@string/setting_cell_description_default"
        android:layout_alignLeft="@id/title_label"/>

</RelativeLayout>